[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  excludesfile = /Users/dueberb/.gitignore_global
  editor = emacs
  quotepath = false
        pager = "diff-so-fancy --markEmptyLines=false| less --tabs=4 -RFX"
	autocrlf = input

[diff-so-fancy]
  markEmptyLines = false

[blame]
  date = relative

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =

[push]
  default = simple

[credential]
	helper = osxkeychain

[grep]
	lineNumber = true
	heading = true
	break = true
	
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[hub]
	protocol = https

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[merge]
	ff = false

